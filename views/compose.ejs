<%- include('partials/header'); -%>


    <h1>Compose</h1>

    <form action="/compose" method="POST">

        <div class="form-group">
            <label for="usr">Title</label>
            <input type="text" class="form-control" id="usr" name="postTitle">
        </div>

        <div class="form-group">
            <label for="comment">Post</label>
            <textarea class="form-control" rows="5" id="comment" name="postBody"></textarea>
        </div>

        <button type="submit" type="button" class="btn btn-primary" name="button">Publish</button>

    </form>

    <%- include('partials/footer'); -%>